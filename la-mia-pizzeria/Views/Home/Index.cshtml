<section id="our-pizzas">
	<div class="container py-3">
		<h2 class="display-3 text-center">Our <span class="highlighted-word">special</span> pizzas</h2>
		<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
			@foreach (Pizza pizza in Model)
			{
				<div class="col">
					<div class="card h-100 shadow">
						<img src="@pizza.ImgPath" class="card-img-top pizza-img" alt="">
						<div class="card-body">
							<h5 class="card-title"> @pizza.Name</h5>
							<p class="card-text"> @pizza.Description</p>
						</div>
						<div class="card-footer">
							<small class="text-body-secondary">&euro; @pizza.Price</small>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</section>